<%
    rand_id = "slider_#{rand(10000)}"
%>
<div class="flexslider" id="slider">
  <ul class="slides">
    <% images.each do |img| %>
      <%
          geom = case request.env['mobvious.device_type']
          when :mobile
            img.portrait? ? "x320" : "480x206#"
          when :tablet
            img.portrait? ? "x768" : "1024x658#"
          else
            img.portrait? ? "x768" : "1140x732#"
          end
      %>
      <li><%= image_fu(img, geom, :class => "img-responsive") %></li>
    <% end %>
  </ul>
</div><!--end of image slider-->
<% if images.length > 1 %>
<div class="flexslider" id="carousel">
  <ul class="slides">
    <% images.each do |img| %>
      <%
          geom = case request.env['mobvious.device_type']
          when :mobile
            img.portrait? ? "x320" : "480x206#"
          when :tablet
            img.portrait? ? "x768" : "1024x658#"
          else
            img.portrait? ? "x768" : "1140x732#"
          end
      %>
      <li><%= image_fu(img, geom, :class => "img-responsive") %></li>
    <% end %>
  </ul>
</div><!--end of image slider-->
<% end %>
